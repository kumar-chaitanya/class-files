{
  "compilerOptions": {
    "target": "es6",                              
    "experimentalDecorators": true,               
    "emitDecoratorMetadata": true,                
    "module": "commonjs",                            
    "moduleResolution": "node",                 
    "outDir": "build",                               
    "esModuleInterop": true,                         
    "forceConsistentCasingInFileNames": true,        
    "strict": true,                                  
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["./src/**/*", "./app.ts"],
  "exclude": ["node_modules"]
}
